{
  "name": "cap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5.6.1",
    "@sap/xssec": "^3.2.9",
    "cors": "^2.8.5",
    "express": "^4",
    "hdb": "^0.19",
    "helmet": "^4.6.0",
    "passport": "^0.5.0"
  },
  "devDependencies": {
    "cds-swagger-ui-express": "^0.3.0",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "[development]": {
        "auth": {
          "kind": "basic-auth",
          "users": {
            "testuser": {
              "password": "testuser",
              "roles": [
                "User"
              ]
            },
            "admin": {
              "password": "admin",
              "roles": [
                "Admin"
              ]
            }
          }
        }
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa-auth"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
