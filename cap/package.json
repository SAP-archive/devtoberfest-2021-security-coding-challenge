{
    "name": "cap",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/audit-logging": "^5.1.0",
        "@sap/cds": "^5.5.5",
        "@sap/xssec": "^3.2.9",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "hdb": "^0.19.0",
        "helmet": "^4.6.0",
        "passport": "^0.5.0"
    },
    "devDependencies": {
        "axios": "^0.24.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "eslint": "^8.1.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "cds": {
            "requires": {
                "db": {
                    "kind": "sql"
                },
                "auth": {
                    "[development]": {
                        "kind": "basic-auth",
                        "users": {
                            "alice": {
                                "roles": [
                                    "seeAll"
                                ]
                            },
                            "bob": {
                                "roles": [
                                    "builder"
                                ]
                            },
                            "*": false
                        }
                    },
                    "[production]": {
                        "auth": {
                            "kind": "jwt-auth"
                        }
                    }
                }
            },
            "hana": {
                "deploy-format": "hdbtable"
            }
        }
    }
