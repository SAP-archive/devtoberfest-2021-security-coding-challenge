{
    "name": "cap",
    "version": "1.0.0",
    "description": "Devtoberfest 2021 Security Week Coding Challenge",
    "repository": "devtoberfest-2021-security-coding-challenge-1",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5.5.4",
        "cors": "^2.8.5",
        "express": "^4",
        "hdb": "^0.19",
        "helmet": "^4.6.0",
        "passport": "^0.5.0"
    },
    "devDependencies": {
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sql"
            },
            "auth": {
                "kind": "basic-auth",
                "users": {
                    "book.viewer@tester.sap.com": {
                        "password": "initial",
                        "ID": "book.viewer@tester.sap.com",
                        "userAttributes": {
                            "email": "book.viewer@tester.sap.com"
                        },
                        "roles": [
                            "BookViewer"
                        ]
                    },
                    "book.admin@tester.sap.com": {
                        "password": "initial",
                        "ID": "book.admin@tester.sap.com",
                        "userAttributes": {
                            "email": "book.admin@tester.sap.com"
                        },
                        "roles": [
                            "BookAdmin"
                        ]
                    },
                    "*": false
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}